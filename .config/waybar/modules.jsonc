    "custom/pacman": {
        "format": "ÔÜá  {}",
        "interval": "once",
        "exec": "count=$(checkupdates | wc -l); [ \"$count\" -eq 0 ] && echo '' || echo \"$count\"",
        "on-click": "kitty -e sh -c 'sudo pacman -Syu; pkill -SIGRTMIN+8 waybar'",
        "signal": 8,
