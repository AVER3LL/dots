    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": ["wofi", "rofi"],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition",
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
        },
    },

    "custom/wallpaper_change": {
        "format": "Û∞∏â",
        "on-click": "sh -c '/home/averell/.local/bin/walset-backend \"$(find \"$HOME/wallpaper\" -type f | shuf -n 1)\"' & disown",
        "tooltip": true,
        "tooltip-format": "Change wallpaper",
    },

    "custom/rec_status": {
        "exec": "~/.config/waybar/scripts/record_status.sh",
        "interval": 1,
        "return-type": "json",
        "on-click": "~/.config/waybar/scripts/record_status.sh --click",
        "format": "{}",
    },

    "custom/media": {
        "format": "{}",
        "escape": true,
        "return-type": "json",
        "max-length": 40,
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl stop",
        "smooth-scrolling-threshold": 1, // This value was tested using a trackpad, it should be lowered if using a mouse.
        "on-scroll-up": "playerctl next",
        "on-scroll-down": "playerctl previous",
        "exec": "$HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null",
    },

    "tray": {
        "icon-size": 20,
        "spacing": 10,
