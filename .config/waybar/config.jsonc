  // AUDIO

  "pulseaudio": {
    "format": "{icon} {volume}",
    // "format": "{icon} ",
    "format-muted": "Ôë¶  {volume}",
    "on-click-middle": "pavucontrol -t 3",
    "on-click": "~/.config/hypr/scripts/volume_hyprdots.sh -o m",
    // "on-scroll-up": "~/.config/hypr/scripts/volumecontrol.sh -o i",
    // "on-scroll-down": "~/.config/hypr/scripts/volumecontrol.sh -o d",
    "tooltip-format": "{icon} {desc} // {volume}%",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "],
