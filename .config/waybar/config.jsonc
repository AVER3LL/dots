  "battery": {
    "interval": 1,
    "align": 0,
    "rotate": 0,
    "full-at": 95,
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20,
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "Ôá¶  {capacity}%",
