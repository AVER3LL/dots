spawn-at-startup "kitty"
spawn-at-startup "swww-daemon"
spawn-at-startup "swaync"
spawn-sh-at-startup "~/.config/waybar/toggle.sh"
spawn-sh-at-startup "~/.config/hypr/xdg-script.sh"
spawn-at-startup "nm-applet" "--indicator"
spawn-at-startup "blueman-applet"
spawn-at-startup "udiskie" "--smart-tray"
spawn-at-startup "swayosd-server"

spawn-at-startup "input-remapper-service"
spawn-at-startup "input-remapper-control" "--command" "autoload"

spawn-at-startup "vicinae" "server"

